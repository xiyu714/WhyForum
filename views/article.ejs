<%- include header %>
<div class="article">
  <p class="info">
    作者：<a href="#"> <%= post.AuthorName %></a> |
    日期: <%= post.CreateDate %>
  </p>
  <p><%- post.Content %></p>
</div>
<div class="post_comment">
  <form method="post">
    评论：<br />
    <textarea name="comment" rows="5" cols="50"></textarea>
    <input type="submit" value="发表">
  </form>
</div>
